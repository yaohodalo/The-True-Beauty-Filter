#Alicia: This class gets the user information for input

class User():
    """
    A class for basic user information.    
    """
    def __init__(a, full_name, cosmetic, age):
        """
        A method to assign each printed output users see.
        """
        a.full_name = full_name.title()
        a.cosmetic = cosmetic.title()
        a.age = age

    def describe_user(a):
        """
        A method to to print each output users see.
        """
        print("Full Name" + " : " + a.full_name)
        print("Cosmetic" + " : " + a.cosmetic)
        print("Age" + " : " + a.age)

def ask_user(message=''):
    """
    Initial output users see and asks user for basic information.
    
    Args:
        message='': the string that users see
    
    Returns:
        user_input: string that user input that discloses information
        
    Side Effects:
        Printing information to console.
    """
    user_input = ''
    while not user_input:
        user_input = input(message)
    return user_input

def form_complete(values, placement, length, value_list):
    """
    Secondary users see and asks user for basic information.
    
    Args:
        values: the string that represents user information
        placement: a list
        length: integer representing length of list
        value_list: list to store user information
    
    Returns:
        placement: list
        
    Side Effects:
        Printing information to console.
    """
    value_list = []
    placement = []
    while len(placement) < length:
        full_name = ask_user("What is your name?: ")
        age =  ask_user("How old are you?: ")
        cosmetic = ask_user("Do you use any cosmetic product? Please enter 'Yes' or 'No': ")
        if  cosmetic == "Yes":
            value = input("What type of cosmetic product do you use the most? \nPlease enter '1' or '2' or '3'\n1:Skincare 2:Makeup or 3:Haircare ")
            if value == 1:
                value_list.append(value) # adding the type 
                return value_list
            elif value == 2:
                value_list.append(value)
                return value_list
            else:
                value_list.append(value)
                return value_list
        elif cosmetic == "No":
            print("Thank you for visiting The True Beauty Filter!")
        values = User(full_name, cosmetic, age)
    return placement

if __name__ == '__main__':
    value_list = [1]
    users = form_complete('user','users', 1, value_list)
    
    
